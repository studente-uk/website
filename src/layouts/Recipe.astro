---
import Layout from '../layouts/Layout.astro';
import '../styles/main.scss';
import '../styles/markdown.scss';
const { frontmatter }= Astro.props;
---

<Layout title= { frontmatter.title } description= { frontmatter.description } >
    <div class="mdheader">
        <h1>{ frontmatter.title }</h1>
        <h2><b>By: <a><i> { frontmatter.author } </i></a></b>@ {frontmatter.date}</h2>
        <p><i> {frontmatter.description} </i></p>
        {
            frontmatter.tags? <p><i>{frontmatter.tags.map((tag: unknown) => <a href={"/tags/"+tag}>#{tag}</a>)}</i></p> : null
        }
        {
            frontmatter.allergens? <p><i>Allergens: {frontmatter.allergens.map((allergen: unknown) => <a href={"/allergens/"+allergen}>{allergen}</a>)}</i></p> : null
        }
        {
            frontmatter.cite? <p><i><a href={frontmatter.cite}>The full conversation can be found here</a></i></p> : null
        }
    </div>
    <div class="mdcontent">
        <slot />
    </div>
</Layout>